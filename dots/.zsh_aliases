# Open zsh config
alias zshconfig="code-insiders ~/.zshrc"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# ALias to VSCode
alias code='code-insiders '
alias c='code-insiders '

# Update and Cleanup env
alias resetTermColors='echo "$(tput init)"'
alias greenTermColors='echo "$(tput setaf 2)"'

alias updateRb='resetTermColors; gem update --system; gem update --no-document; gem cleanup; greenTermColors; echo "Ruby gems updated!"'
alias updateNpm='resetTermColors; sudo npm cache clean -f; npm install npm -g; npm update -g; greenTermColors; echo "NPM updated!"'
alias updateYarn='resetTermColors; yarn cache clean --force; yarn global upgrade --latest; greenTermColors; echo "Yarn updated!"'
alias updateZsh='resetTermColors; antibody bundle < ~/.zsh_plugins > ~/.zsh_plugins.sh; omz update; antibody update; greenTermColors; echo "zsh updated!"'
alias updateBrew='resetTermColors; brew -v update; brew upgrade; brew cleanup; brew doctor; greenTermColors; echo "Brew updated!"'

alias updateOs='updateRb; updateBrew; updateNpm; updateYarn; updateZsh; greenTermColors; echo "Everything updated!"; resetTermColors'
alias updateOsFull='updateOsx; updateOs; resetTermColors'
alias updateOsx='sudo softwareupdate -i -a; mas upgrade; greenTermColors; echo "OS Updated!"; resetTermColors'

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Chmod -x
alias chmox='chmod -x'

# Always use color output for `ls`
alias ls="exa -s type --group-directories-first --git --icons --color always"

# List all files colorized in long format
alias l="ls -lFh"

# List all files colorized in long format, including dot files
alias la="ls -laFh"

# List only directories
alias lsd="ls -D"
alias lsdl="ls -lD"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# sudo editors
alias vim='nvim'
alias svim='sudo vim'
alias snano='sudo nano'

# Go to git root
alias groot='cd `git rev-parse --show-toplevel`'

# Better find
alias find='fd -X bat'

# Better du
alias du='ncdu --color dark -rr -x --exclude .git --exclude node_modules'

# Better man
alias help='tldr'
alias man='batman'
