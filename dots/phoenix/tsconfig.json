{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "..",
    "paths": {
      "@/*": ["./*"]
    },
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "typings"],
  "exclude": [".git", "node_modules"]
}
